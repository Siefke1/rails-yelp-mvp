<div class="container">
  <h1><%= @restaurant.name %></h1>
  <br>
  <h4>Address: <%= @restaurant.address %></h4>
  <br>
  <h4>Phone: <%= @restaurant.phone_number %></h4>
  <br>
  <h4>Category: <%= @restaurant.category %></h4>
  <br>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
  <% end %>
  <%= link_to '--> back to the list <--', restaurants_path %>
  <br>
  <%= link_to '--> Write a review <--', new_restaurant_review_path(@restaurant) %>
  <div class="review-container">

  </div>
</div>
